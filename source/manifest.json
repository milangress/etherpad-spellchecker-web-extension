{
  "name": "Ether-Spell",
  "version": "1.0.0",
  "description": "Etherpad spellchecking support browser extension",
  "homepage_url": "https://github.com/milangress/etherpad-spellchecker-web-extension",
  "manifest_version": 3,
  "minimum_chrome_version": "110",
  "browser_specific_settings": {
	"gecko": {
	  "id": "ether-spell@milangress.github.io",
	  "strict_min_version": "110.0"
	}
  },
  "icons": {
	"32": "icon32.png",
	"48": "icon48.png",
	"128": "icon128.png"
  },
  "action": {
	"default_popup": "popup.html"
  },
  "permissions": [
	"scripting",
	"activeTab",
	"storage"
  ],
  "content_scripts": [
	{
	  "matches": [
		"https://etherpad.hackersanddesigners.nl/p/*",
		"https://pad.constantvzw.org/p/*",
		"https://etherpad.wikimedia.org/p/*",
		"https://board.net/p/*",
		"https://pad.riseup.net/p/*",
		"https://pad.okfn.org/p/*",
		"https://pad.ccc.de/p/*",
		"https://pad.lqdn.fr/p/*",
		"https://yopad.eu/p/*"
	  ],
	  "js": [
		"content.js"
	  ],
	  "css": [
		"content.css"
	  ],
	  "run_at": "document_end"
	}
  ]
}
